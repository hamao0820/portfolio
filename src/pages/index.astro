---
import Layout from "../layouts/Layout.astro";
import Links from "../components/index/Links.astro";
import Logo from "../components/index/Logo.astro";
import Table from "../components/index/Table.astro";
import Profile from "../components/index/Profile.astro";
import Section from "../components/index/Section.astro";
---

<Layout title="hamao">
  <h1>
    <Logo /><span class="title">hamao</span>
  </h1>
  <Section title="プロフィール">
    <Table />
  </Section>
  <Section title="自己紹介">
    <Profile />
  </Section>
  <Section title="リンク">
    <Links />
  </Section>
</Layout>

<style>
  h1 {
    display: flex;
    align-items: center;
    margin-left: 1rem;
  }
  .title {
    margin-left: 1rem;
  }
</style>
