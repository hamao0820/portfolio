---
import Anker from "../Anker/Anker.astro";

interface Props {
  title: string;
  thumbnail: string;
  url: string;
}
const { title, thumbnail, url } = Astro.props;
---

<div>
  <div class="title">{title}</div>
  <div>
    <img id="thumnail" src={thumbnail} alt=`${title}のサムネイル画像` />
  </div>
  <Anker href={url} text={title} />
  <slot />
</div>

<style>
  .title {
    font-size: 1.5rem;
    font-weight: bold;
  }
  img {
    width: 300px;
    height: auto;
    margin: 0.5rem 0;
  }
</style>
