---
interface Props {
  title: string;
  url: string;
  createdAt: string;
}
const { title, url, createdAt } = Astro.props;
---

<div>
  <a href={url} class="title">
    <p>{title}</p>
    <p class="create-at">Written on: {createdAt}</p>
  </a>
</div>

<style>
  .title {
    font-size: 1.5rem;
    font-weight: bold;
  }
  .create-at {
    font-size: 0.8rem;
    color: gray;
  }
</style>
