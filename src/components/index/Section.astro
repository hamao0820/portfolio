---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="section">
  <h2>{title}</h2>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  h2 {
    padding: 0.5rem;
    font-size: 1.5rem;
    font-weight: bold;
  }
  .section {
    margin: 0.5rem 1rem;
  }
  .content {
    padding: 0 1rem;
  }
</style>
